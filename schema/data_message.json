{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "DiscoveryMessage",
  "description": "A data message (TCP) with basic fields",
  "type": "object",
  "properties": {
    "header": {
      "$ref": "#/definitions/header"
    },
    "data":{
      "$ref": "#/definitions/data"
    },
    "level": {
      "type": "number"
    }
  },
  "required":["header"],
  "definitions": {
    "header": {
      "properties": {
        "senderType": {
          "type": "string",
          "enum": [
            "CLIENT",
            "NODE"
          ]
        },
        "messageType": {
          "type": "string",
          "enum": [
            "TCP_QUERY",
            "TCP_RESULT"
          ]
        },
        "messageStatus": {
          "type": "string",
          "enum": [
            "ERROR",
            "NORMAL"
          ]
        }
      },
      "required": [
        "senderType",
        "messageType",
        "messageStatus"
      ]
    },
    "data": {
      "type":"array",
      "items":{
        "title":"Book",
        "type":"object",
        "properties":{
          "title": {
            "type":"string"
          },
          "author": {
            "type": "string"
          },
          "desc": {
            "type":"string"
          },
          "year": {
            "type":"number"
          }
        },
        "required":["year","author","title","desc"]
      }
    }
  }
}